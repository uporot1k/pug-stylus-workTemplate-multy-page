//- ##### the navigation links mixin #####

mixin navLink(link, active, name)
  li.nav__item
    a.nav__link(
      href=link 
      class={active: current === '#{active}'}
    ) !{name}

//- ######################################

ul.nav
  +navLink('/', 'index', 'Home')
  +navLink('about.html', 'about', 'About')
  +navLink('https://github.com/uporot1k/pug-stylus-workTemplate-multy-page', '', 'GitHub &rarr;')